<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anew.frcscoutingapp.TeleopMenu">

    <Button
        android:id="@+id/goToTeleop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Continue To Teleop 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balls"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ballGroupTeleop"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="34dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/gears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gears"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/gearsTimer"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/ballsTeleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# of Balls:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        tools:ignore="HardcodedText,MissingConstraints"
        app:layout_constraintBaseline_toBaselineOf="@+id/numBallsTeleop"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ballsTimer" />

    <TextView
        android:id="@+id/gearsTeleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# of Gears:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        app:layout_constraintBaseline_toBaselineOf="@+id/numGearsTeleop"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/gearsTimer"
        android:layout_marginLeft="-270dp" />

    <ImageButton
        android:id="@+id/addGearsTeleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="11dp"
        android:tint="@android:color/holo_blue_dark"
        app:layout_constraintLeft_toLeftOf="@+id/submitGearsTime"
        app:layout_constraintTop_toBottomOf="@+id/submitGearsTime"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/subtractGearsTeleop"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="17dp"
        android:tint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/goToTeleop2"
        app:layout_constraintLeft_toLeftOf="@+id/subtractBallsTeleop"
        app:layout_constraintRight_toRightOf="@+id/subtractBallsTeleop"
        app:layout_constraintTop_toBottomOf="@+id/gears"
        app:srcCompat="@android:drawable/button_onoff_indicator_on"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/addBallsTeleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:tint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/addGearsTeleop"
        app:layout_constraintLeft_toLeftOf="@+id/addGearsTeleop"
        app:layout_constraintRight_toRightOf="@+id/addGearsTeleop"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/subtractBallsTeleop"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="78dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="31dp"
        android:tint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/subtractGearsTeleop"
        app:layout_constraintLeft_toLeftOf="@+id/gears"
        app:layout_constraintRight_toLeftOf="@+id/ballsTimer"
        app:srcCompat="@android:drawable/button_onoff_indicator_on"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.55" />

    <TextView
        android:id="@+id/numBallsTeleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ballsTimer"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/ballsTeleop" />

    <TextView
        android:id="@+id/numGearsTeleop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/addGearsTeleop"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toRightOf="@+id/gearsTeleop" />

    <EditText
        android:id="@+id/gearsTimer"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:cursorVisible="true"
        android:drawableTint="@android:color/holo_blue_dark"
        android:ems="10"
        android:hint="Cycle Time"
        android:inputType="number"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textCursorDrawable="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/addGearsTeleop"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/submitGearsTime"
        tools:cursorVisible="true"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/ballsTimer"
        android:layout_width="106dp"
        android:layout_height="56dp"
        android:layout_marginBottom="71dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:cursorVisible="true"
        android:drawableTint="@android:color/holo_blue_dark"
        android:ems="10"
        android:hint="Cycle Time"
        android:inputType="number"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textCursorDrawable="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/gearsTimer"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:cursorVisible="true"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintBottom_creator="1" />

    <Button
        android:id="@+id/submitGearsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Time"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="151dp" />

    <Button
        android:id="@+id/submitBallsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Time"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ballsTimer"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toRightOf="@+id/ballGroupTeleop" />

    <RadioGroup
        android:id="@+id/ballGroupTeleop"
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:layout_marginBottom="101dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/submitBallsTime"
        app:layout_constraintLeft_toLeftOf="@+id/ballsTimer"
        tools:ignore="MissingConstraints,RtlHardcoded"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1">

        <RadioButton
            android:id="@+id/noAttemptBallsTeleop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="No Attempt"
            app:buttonTint="@android:color/holo_blue_dark"
            tools:ignore="HardcodedText,MissingPrefix" />

        <RadioButton
            android:id="@+id/lowGoalTeleop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Low"
            app:buttonTint="@android:color/holo_blue_dark"
            tools:ignore="HardcodedText,MissingPrefix" />

        <RadioButton
            android:id="@+id/highGoalTeleop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="High"
            app:buttonTint="@android:color/holo_blue_dark"
            tools:ignore="HardcodedText,MissingPrefix" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anew.frcscoutingapp.PreMatchMenu">

    <Button
        android:id="@+id/mainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Main Menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/backPreMatchMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-118dp"
        android:layout_marginTop="-238dp"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/matchNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Team Number"
        android:ems="10"
        android:hint="Match Number"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/TeamNum"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/TeamNum"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/TeamNum" />

    <EditText
        android:id="@+id/TeamNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Team Number"
        android:ems="10"
        android:hint="Team Number"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/backPreMatchMenu"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/startScouting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="Start Scouting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/redAlliance"
        android:layout_width="96dp"
        android:layout_height="0dp"
        android:text="RED"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/allianceSelector"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/allianceSelector"
        app:layout_constraintLeft_toRightOf="@+id/allianceSelector" />

    <TextView
        android:id="@+id/blueAlliance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="BLUE"
        app:layout_constraintRight_toLeftOf="@+id/allianceSelector"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/allianceSelector"
        android:layout_marginEnd="20dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/backPreMatchMenu"
        app:layout_constraintTop_toTopOf="@+id/allianceSelector" />

    <Switch
        android:id="@+id/allianceSelector"
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/matchNum" />


</android.support.constraint.ConstraintLayout>

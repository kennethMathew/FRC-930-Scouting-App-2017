<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:statusBarColor">?android:attr/windowBackground</item>
    </style>

    <style name="BEARs_APP" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/secondary_text_material_light</item>
        <item name="android:textColorPrimaryInverse">@color/zxing_viewfinder_mask</item>
        <item name="android:statusBarColor">?android:attr/textColorSecondaryNoDisable</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondaryInverse">@color/zxing_custom_viewfinder_mask</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:navigationBarColor">@android:color/secondary_text_light_nodisable</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/zxing_custom_viewfinder_mask</item>
    </style>

</resources>
